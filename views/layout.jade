doctype html
html(ng-app="analyticsApp")
  head
    title= title
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootswatch/3.3.5/yeti/bootstrap.min.css')
    link(rel='stylesheet', href='/styles/prettify.css')
    link(rel='stylesheet', href='/styles/angular.rangeSlider.css')
    link(rel='stylesheet', href='/styles/style.css')
  body
    nav.navbar.navbar-default.navbar-fixed-top(ng-controller='NavigationController')
      .container
          .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
              span.sr-only Toggle navigation        
              span.icon-bar
              span.icon-bar     
              span.icon-bar   
            a.navbar-brand(href='#/')= title
          .navbar-collapse.collapse
            ul.nav.navbar-nav
              li(ng-class="{ active: isActive('/home')}")
                a(href='#/') Home
              li(ng-class="{ active: isActive('/search')}")
                a(href='#/search') Search Page
              li(ng-class="{ active: isActive('/buckets')}")
                a(href='#/buckets') Time Bucket Table
              li(ng-class="{ active: isActive('/chart')}")
                a(href='#/chart') 5 Second BoxPlot
    block content    
    script(type='text/javascript', src='https://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js')
    script(type='text/javascript', src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js')
    script(type='text/javascript', src='https://ajax.googleapis.com/ajax/libs/angularjs/1.2.9/angular.min.js')
    script(type='text/javascript', src='https://ajax.googleapis.com/ajax/libs/angularjs/1.2.9/angular-route.min.js')
    script(type='text/javascript', src='http://cdnjs.cloudflare.com/ajax/libs/prettify/r298/run_prettify.js')
    script(type='text/javascript', src='https://cdn.plot.ly/plotly-latest.min.js')
    script(type='text/javascript', src='/scripts/angular.rangeSlider.js')
    script(type='text/javascript', src='/angular/angular-config.js')
    script(type='text/javascript', src='/angular/angular-app.js')
    script(type='text/javascript', src='/angular/navController.js')
    script(type='text/javascript', src='/angular/chartController.js')
    script(type='text/javascript', src='/angular/bucketsController.js')
    script(type='text/javascript', src='/angular/searchController.js')